{
	"rust-analyzer.checkOnSave": true,
	// "rust-analyzer.check.command": "clippy",
	// "rust-analyzer.cargo.features": "all",
	"rust-analyzer.procMacro.enable": true,
	"rust-analyzer.cargo.buildScripts.enable": true,

	// Performance optimizations:
	"rust-analyzer.checkOnSave.allTargets": false,
	"rust-analyzer.cargo.allFeatures": false,
	// "rust-analyzer.lens.enable": false,  // Disables code lens hints
	"rust-analyzer.inlayHints.enable": false,  // Optional: disables inline type hints

	// For Bevy specifically (helps with proc macros):
	"rust-analyzer.procMacro.ignored": {
		"bevy_ecs": []
	},
	"rust-analyzer.cargo.extraEnv": {
		"RUSTFLAGS": "-Clinker=rust-lld.exe"
	}
}